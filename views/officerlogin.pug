extends layouts/main-layout.pug
block head
    link(rel='stylesheet' type='text/css' href='/css/officerlogin.css')
block content
    div.cont
        h2.pagetitle Welcome Officer
        p.pagetitle Login below to access Officer Dashboard
        form(action='/officerlogin' method='post')
            p All the fields are required
            br
            label(for='email') Email:
            input.forminput#email(type='text' name='email',placeholder="example@example.com")
            br
            br
            label(for='password') Password:
            input.forminput#password(type='password' name='password',placeholder="Enter your Password")
            input#user(type='submit' value='Submit')
        if text
            p#Error=text